do_install() {
	./install --prefix "${DESTDIR}/usr"
	vdoc docs/README.md
	vdoc docs/compatibility.md
	vdoc docs/distrobox_custom.md
	vdoc docs/featured_articles.md
	vdoc docs/useful_tips.md
}
